{
  "compilerOptions": {
    "outDir": "dist/js",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es3",
    "lib": [
      "dom",
      "es6"
    ],
    "listEmittedFiles": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}